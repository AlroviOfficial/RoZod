{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": false,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [".eslintrc.cjs", "src"],
  "exclude": ["node_modules", "**/__tests__/*"],
  "typedocOptions": {
    "out": "./docs",
    "entryPoints": ["./src/index.ts"],
    "entryPointStrategy": "expand",
  }
}
