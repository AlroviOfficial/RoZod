{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": false,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [".eslintrc.cjs", "src"],
  "exclude": ["node_modules", "**/__tests__/*"],
  "typedocOptions": {
    "out": "./docs",
    "entryPoints": ["./src/index.ts", "./src/endpoints", "./src/opencloud"],
    "entryPointStrategy": "expand",
    "blockTags": [
      "@api",
      "@description",
      "@tags",
      "@summary",
      "@param",
      "@returns",
      "@yields",
      "@example"
    ],
    "modifierTags": [
      "@api",
      "@description", 
      "@tags",
      "@summary",
      "@param",
      "@returns",
      "@yields",
      "@example"
    ]
  }
}
